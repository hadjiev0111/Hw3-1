<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:text">Войти </item>
        <item name="android:background">@drawable/background_button </item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="EditTextLog" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:hint">@string/login</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="EditTextPas" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:hint">@string/password</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/txt_view</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewGeektech" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/geecktech</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>